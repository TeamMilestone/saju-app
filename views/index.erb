<div class="container">
    <h1 class="main-title">사주 분석</h1>
    <p class="subtitle">당신의 운명을 읽어드립니다</p>
    
    <form action="/calculate" method="post" class="saju-form">
        <div class="form-group">
            <label for="name">이름</label>
            <input type="text" id="name" name="name" required placeholder="이름을 입력하세요">
        </div>
        
        <div class="form-group">
            <label>성별</label>
            <div class="gender-select">
                <input type="radio" id="male" name="gender" value="남" required>
                <label for="male" class="gender-label">남성</label>
                
                <input type="radio" id="female" name="gender" value="여" required>
                <label for="female" class="gender-label">여성</label>
            </div>
        </div>
        
        <div class="birth-datetime">
            <h3>생년월일시</h3>
            
            <div class="datetime-grid">
                <div class="datetime-item">
                    <label for="year">년도</label>
                    <select id="year" name="year" required>
                        <option value="">선택</option>
                        <% (1940..2024).reverse_each do |y| %>
                            <option value="<%= y %>"><%= y %>년</option>
                        <% end %>
                    </select>
                </div>
                
                <div class="datetime-item">
                    <label for="month">월</label>
                    <select id="month" name="month" required>
                        <option value="">선택</option>
                        <% (1..12).each do |m| %>
                            <option value="<%= m %>"><%= m %>월</option>
                        <% end %>
                    </select>
                </div>
                
                <div class="datetime-item">
                    <label for="day">일</label>
                    <select id="day" name="day" required>
                        <option value="">선택</option>
                        <% (1..31).each do |d| %>
                            <option value="<%= d %>"><%= d %>일</option>
                        <% end %>
                    </select>
                </div>
                
                <div class="datetime-item">
                    <label for="hour">시</label>
                    <select id="hour" name="hour" required>
                        <option value="">선택</option>
                        <% (0..23).each do |h| %>
                            <option value="<%= h %>"><%= h %>시</option>
                        <% end %>
                    </select>
                </div>
            </div>
        </div>
        
        <button type="submit" class="submit-btn">사주 분석하기</button>
    </form>
</div>

