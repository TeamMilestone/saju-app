files:
  "/etc/nginx/conf.d/static_files.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      location ~ \.(png|jpg|jpeg|gif|ico|css|js)$ {
        root /var/app/current/public;
        expires 1y;
        add_header Cache-Control public;
        add_header Last-Modified "";
      }